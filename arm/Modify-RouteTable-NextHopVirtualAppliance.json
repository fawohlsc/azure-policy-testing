{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "routeTableSettings": {
            "type": "Object",
            "metadata": {
                "displayName": "Route Table Settings",
                "description": "Location-specific settings for route tables."
            }
        }
    },
    "variables": {
        // Built-in role 'Network Contributor'.
        "roleDefinitionId": "/providers/microsoft.authorization/roleDefinitions/4d97b98b-1d4f-4787-a291-c67834d212e7"
    },
    "resources": [
        {
            "name": "Modify-RouteTable-NextHopVirtualAppliance",
            "type": "Microsoft.Authorization/policyDefinitions",
            "apiVersion": "2020-03-01",
            "properties": {
                "policyType": "Custom",
                "mode": "All",
                "displayName": "Modify-RouteTable-NextHopVirtualAppliance",
                "description": "Adds route with address prefix 0.0.0.0/0 pointing to the virtual appliance in case there is none. Best combined with policy deny-route-nexthopvirtualappliance to ensure the correct IP address of the virtual appliance.",
                "metadata": {
                    "category": "Network"
                },
                "parameters": {
                    "routeTableSettings": {
                        "type": "Object",
                        "metadata": {
                            "displayName": "Route Table Settings",
                            "description": "Location-specific settings for route tables."
                        }
                    }
                },
                "policyRule": {
                    "if": {
                        "allOf": [
                            {
                                "field": "type",
                                "equals": "Microsoft.Network/routeTables"
                            },
                            {
                                "count": {
                                    "field": "Microsoft.Network/routeTables/routes[*]",
                                    "where": {
                                        "field": "Microsoft.Network/routeTables/routes[*].addressPrefix",
                                        "equals": "0.0.0.0/0"
                                    }
                                },
                                "equals": 0
                            }
                        ]
                    },
                    "then": {
                        "effect": "modify",
                        "details": {
                            "roleDefinitionIds": [
                                "[variables('roleDefinitionId')]"
                            ],
                            "conflictEffect": "audit",
                            "operations": [
                                {
                                    "operation": "add",
                                    "field": "Microsoft.Network/routeTables/routes[*]",
                                    "value": {
                                        "name": "default",
                                        "properties": {
                                            "addressPrefix": "0.0.0.0/0",
                                            "nextHopType": "VirtualAppliance",
                                            "nextHopIpAddress": "[[parameters('routeTableSettings')[field('location')].virtualApplianceIpAddress]"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        {
            "name": "[uniqueString('Modify-RouteTable-NextHopVirtualAppliance')]",
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2020-03-01",
            "properties": {
                "displayName": "Modify-RouteTable-NextHopVirtualAppliance",
                "policyDefinitionId": "[resourceId('Microsoft.Authorization/policyDefinitions', 'Modify-RouteTable-NextHopVirtualAppliance')]",
                "parameters": {
                    "routeTableSettings": {
                        "value": "[parameters('routeTableSettings')]"
                    }
                },
                "description": "Adds route with address prefix 0.0.0.0/0 pointing to the virtual appliance in case there is none. Best combined with policy deny-route-nexthopvirtualappliance to ensure the correct IP address of the virtual appliance.",
                "metadata": {
                    "category": "Network"
                },
                "enforcementMode": "Default"
            },
            "location": "northeurope",
            "identity": {
                "type": "SystemAssigned"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Authorization/policyDefinitions', 'Modify-RouteTable-NextHopVirtualAppliance')]"
            ]
        },
        {
            "name": "[guid('Modify-RouteTable-NextHopVirtualAppliance')]",
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2020-04-01-preview",
            "properties": {
                "principalType": "ServicePrincipal",
                "roleDefinitionId": "[variables('roleDefinitionId')]",
                // Get the identifier of the managed identity created for policy assignment 'Modify-RouteTable-NextHopVirtualAppliance'.
                "principalId": "[reference(uniqueString('Modify-RouteTable-NextHopVirtualAppliance'), '2020-03-01', 'Full').identity.principalId]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Authorization/policyAssignments', uniqueString('Modify-RouteTable-NextHopVirtualAppliance'))]"
            ]
        }
    ]
}